<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bella.eptl" version="1.5.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bella EPTL</name>
    <description>
        Bella Pizzeria Electronic Pizza Time Logs
    </description>
    <author email="tylerknox@thebellapizza.com" href="https://www.thebellapizza.com">
        Tyler Knox
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="SetFullscreen" value="true" />
    <feature name="EptlTippy">
        <param name="android-package" value="com.bella.eptl.EptlTippy" />
    </feature>
    <feature name="File" >
        <param name="android-package" value="org.apache.cordova.file.FileUtils"/>
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
</widget>
